<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vague">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#00B8D4"
        app:layout_constraintBottom_toBottomOf="@+id/button_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <Button
        android:id="@+id/button_setting"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:background="#FBFCFC"
        android:gravity="center_vertical"
        android:text="@string/profile_setting"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="gravity"

        android:drawableLeft="@drawable/profilesetting"
        android:drawableStart="@drawable/profilesetting"
        android:drawableRight="@drawable/profilearrow"
        android:drawableEnd="@drawable/profilearrow"
        android:drawablePadding="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_feed" />

    <Button
        android:id="@+id/button_feed"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:background="#FBFCFC"
        android:gravity="center_vertical"
        android:text="@string/feed"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="gravity"

        android:drawableLeft="@drawable/profilerss"
        android:drawableStart="@drawable/profilerss"
        android:drawableRight="@drawable/profilearrow"
        android:drawableEnd="@drawable/profilearrow"
        android:drawablePadding="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chart" />

    <Button
        android:id="@+id/button_chart"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:background="#FBFCFC"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:drawableLeft="@drawable/profilechart"
        android:drawableStart="@drawable/profilechart"
        android:drawableRight="@drawable/profilearrow"
        android:drawableEnd="@drawable/profilearrow"
        android:drawablePadding="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/profile_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_history" />


    <Button
        android:id="@+id/button_history"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="96dp"
        android:background="#FBFCFC"
        android:gravity="center_vertical"
        android:text="@string/profile_moodHistory"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"


        android:drawableLeft="@drawable/profilehistory"
        android:drawableStart="@drawable/profilehistory"
        android:drawableRight="@drawable/profilearrow"
        android:drawableEnd="@drawable/profilearrow"
        android:drawablePadding="15dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="143dp"
        android:background="#fbfcfc"
        android:contentDescription="@string/profile_background"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar"
        android:contentDescription="@string/profile_avatar"
        android:layout_width="85dp"
        android:layout_height="69dp"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zeldaflat" />

    <TextView
        android:id="@+id/follower_number"
        android:layout_width="99dp"
        android:layout_height="25dp"

        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/following_number"
        app:layout_constraintEnd_toStartOf="@+id/following_number" />

    <TextView
        android:id="@+id/postNumber"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/follower_number"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:text="@string/profile_post"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/textView2" />

    <TextView
        android:id="@+id/username"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="37dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/profile_sample_username"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:text="@string/profile_follower"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
        app:layout_constraintEnd_toStartOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"


        android:gravity="center"
        android:text="@string/profile_following"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/following_number"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />








</androidx.constraintlayout.widget.ConstraintLayout>