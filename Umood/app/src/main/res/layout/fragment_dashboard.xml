<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:listitem="@layout/user_item"

    android:layout_width="match_parent"
    android:background="@drawable/background_vague"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/request"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FBFCFC"

        android:drawableStart="@drawable/followingrequest"
        android:drawableLeft="@drawable/followingrequest"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/request"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/follower"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="1dp"
        android:background="#FBFCFC"
        android:drawableStart="@drawable/followingfollowers"
        android:drawableLeft="@drawable/followingfollowers"
        android:drawablePadding="17dp"

        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"

        android:text="@string/follower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/request" />

    <Button
        android:id="@+id/addFollowing"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginTop="1dp"

        android:background="#FBFCFC"
        android:drawableStart="@drawable/followingadduser"
        android:drawableLeft="@drawable/followingadduser"

        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"


        android:text="@string/add_fllow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follower" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_following"
        android:layout_width="match_parent"
        android:layout_height="466dp"
        android:layout_marginTop="32dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFollowing"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/follower"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/addFollowing"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>